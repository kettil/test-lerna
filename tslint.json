{
  "extends": ["tslint:latest", "tslint-react", "tslint-immutable", "tslint-config-prettier"],
  "rules": {
    "arrow-return-shorthand": true,
    "ban-comma-operator": true,
    "ban-ts-ignore": true,
    "class-name": true,
    "cyclomatic-complexity": [true, 15],
    "eofline": true,
    "file-name-casing": [true, { ".tsx": "pascal-case", ".*": "camel-case" }],
    "interface-name": [true, "never-prefix"],
    "interface-over-type-literal": false,
    "jsdoc-format": [true, "check-multiline-start"],
    "linebreak-style": [true, "LF"],
    "member-access": [true, "no-public"],
    "newline-before-return": true,
    "no-async-without-await": true,
    "no-floating-promises": true,
    "no-implicit-dependencies": [true, ["react-test-renderer", "sinon"]],
    "no-irregular-whitespace": true,
    "no-null-keyword": true,
    "no-promise-as-boolean": true,
    "no-return-await": true,
    "no-submodule-imports": [true, "rxjs/operators", "rxjs/ajax"],
    "no-switch-case-fall-through": true,
    "object-literal-sort-keys": false,
    "ordered-imports": true,
    "prefer-const": true,
    "prefer-template": [true, "allow-single-concat"],
    "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-double"],
    "switch-final-break": true,
    "variable-name": { "options": ["ban-keywords", "check-format", "allow-pascal-case"] }
  }
}
